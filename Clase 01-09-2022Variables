<?php

// Tipos de datos Númericos
// Enteros o Integer
$numero_entero = 10;

// Flotantes o Float
$numero_flotante = 10.5;

// Dobles o Double (más grande que un float)
$numero_doble = 10.5;

// Cadenas de caracteres
// Char
$letra = "a";

$cadena_caracteres = "Juan";
$otra_cadena_caracteres = "Juan";

// Booleanos 
$verdadero = true;
$falso = false;

// Sin valor
//NULL
$nulo = null;

// Undefined
// Variable no esta definida
echo $problema;

/*
PHP es un leguaje de tipado debil
es capaz de inferir cual es el tipo de dato de una variable
segun el contexto
*/
?>